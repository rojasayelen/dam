<!-- res/drawable/spinner_background_with_arrow.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Fondo gris para el Spinner -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#E0E0E0" /> <!-- Fondo gris -->
            <corners android:radius="4dp" />
        </shape>
    </item>

    <!-- Flecha en el lado derecho usando un inset para alinearla -->
    <item android:gravity="end|center_vertical">
        <inset
            android:drawable="@drawable/spinner_arrow"
            android:insetRight="1dp" /> <!-- Ajusta insetRight para posicionar la flecha -->
    </item>
</layer-list>
