<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/vencimientoCuota1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    tools:context=".VencimientoDeCuota1">

    <!-- Contenedor superior con título y subtítulo -->
    <LinearLayout
        android:id="@+id/headerContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/purple_background"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/title"
            style="@style/TitlePrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/vencimientos" />

        <TextView
            android:id="@+id/subtitle"
            style="@style/SubtitlePrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Consulta de vencimientos" />
    </LinearLayout>

    <!-- Campo de fecha Desde -->
    <FrameLayout
        android:id="@+id/frameLayoutDesde"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/headerContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.7">

        <EditText
            android:id="@+id/editTextDesde"
            style="@style/InputPrimary"
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:inputType="date"
            android:focusable="false"
            android:clickable="true"
            android:text="18/08/2024" />

        <TextView
            android:id="@+id/textViewDesde"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="18dp"
            android:paddingTop="8dp"
            android:text="Desde"
            android:textSize="17sp" />
    </FrameLayout>

    <!-- Campo de fecha Hasta -->
    <FrameLayout
        android:id="@+id/frameLayoutHasta"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/frameLayoutDesde"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.7">

        <EditText
            android:id="@+id/editTextHasta"
            style="@style/InputPrimary"
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:clickable="true"
            android:focusable="false"
            android:inputType="date"
            android:text="18/08/2024" />

        <TextView
            android:id="@+id/textHasta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="18dp"
            android:paddingTop="8dp"
            android:text="Hasta"
            android:textSize="17sp" />
    </FrameLayout>

    <!-- Lista de socios -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewSocios"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/frameLayoutHasta"
        app:layout_constraintBottom_toTopOf="@+id/backButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.5" />

    <!-- Botón Volver -->
    <Button
        android:id="@+id/backButton"
        style="@style/ButtonSecondary"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Volver"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/recyclerViewSocios"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
