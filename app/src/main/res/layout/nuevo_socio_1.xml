<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    tools:context=".NuevoSocio">

    <!-- ScrollView para habilitar el desplazamiento vertical -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- ConstraintLayout que contiene todos los elementos -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Contenedor de fondo violeta -->
            <LinearLayout
                android:id="@+id/container_violeta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp"
                android:background="@color/purple_background"
                android:gravity="center"
                android:elevation="4dp"
                app:layout_constraintWidth_percent="1"
                app:layout_constraintTop_toTopOf="parent">

                <!-- Título principal -->
                <TextView
                    android:id="@+id/title"
                    android:text="Nuevo Cliente"
                    style="@style/TitlePrimary"/>

                <!-- Subtítulo -->
                <TextView
                    android:id="@+id/subtitle"
                    android:text="En esta pantalla puedes dar de alta tanto un socio como un no socio"
                    style="@style/SubtitlePrimary"/>
            </LinearLayout>

            <!-- Campo DNI -->
            <EditText
                android:id="@+id/dniEditText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:hint="DNI"
                android:inputType="number"
                style="@style/InputPrimary"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/container_violeta" />

            <!-- Campo Nombre -->
            <EditText
                android:id="@+id/nameEditText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:hint="Nombre"
                style="@style/InputPrimary"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/dniEditText" />

            <!-- Campo Apellido -->
            <EditText
                android:id="@+id/lastnameEditText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:hint="Apellido"
                style="@style/InputPrimary"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/nameEditText" />

            <!-- Campo Número de teléfono -->
            <EditText
                android:id="@+id/phoneEditText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:hint="Número de teléfono"
                android:inputType="phone"
                style="@style/InputPrimary"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/lastnameEditText" />

            <!-- Campo Dirección -->
            <EditText
                android:id="@+id/addressEditText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:hint="Dirección"
                style="@style/InputPrimary"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/phoneEditText" />

            <!-- Campo Email -->
            <EditText
                android:id="@+id/emailEditText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:hint="Email"
                android:inputType="textEmailAddress"
                style="@style/InputPrimary"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/addressEditText" />

            <!-- Spinner Socio -->
            <Spinner
                android:id="@+id/socioSpinner"
                android:layout_width="136dp"
                android:layout_height="50dp"
                android:layout_marginStart="60dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/spinner_background"
                android:entries="@array/socio_options"
                app:layout_constraintEnd_toStartOf="@id/aptPhysicalSwitch"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/emailEditText" />

            <!-- Switch Apto Físico -->
            <Switch
                android:id="@+id/aptPhysicalSwitch"
                android:layout_width="119dp"
                android:layout_height="50dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="60dp"
                android:background="#E0E0E0"
                android:minWidth="48dp"
                android:minHeight="48dp"
                android:padding="8dp"
                android:text="Apto Físico"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/socioSpinner"
                app:layout_constraintTop_toBottomOf="@id/emailEditText"
                tools:ignore="UseSwitchCompatOrMaterialXml" />

            <Button
                android:id="@+id/nextButton"
                style="@style/ButtonPrimary"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Dar de alta"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/aptPhysicalSwitch" />

            <!-- Botón Volver -->
            <Button
                android:id="@+id/backButton"
                style="@style/ButtonSecondary"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Volver"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/nextButton" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
